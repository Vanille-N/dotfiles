/*  ==========================================================================
    Rofi color theme

    Based on the Gruvbox color scheme for Vim by morhetz
    https://github.com/morhetz/gruvbox

    File: theme.rasi
    Desc: Gruvbox dark color theme for Rofi
    Original Author: bardisty <b@bah.im>
    Templated by: Vanille-N <vanille@crans.org>
        for use with rofi.py
    ========================================================================== */

* {
    /* Theme settings */
    highlight: bold italic;
    scrollbar: true;

    /* Gruvbox dark colors */
    bg0-hard:     #1d2021;
    bg0:          #282828;
    bg2:          #504945;
    fg0:          #fbf1c7;
    fg1:          #ebdbb2;
    red-dark:     #cc241d;
    red-light:    #fb4934;
    green-dark:   #98971a;
    green-light:  #b8bb26;
    yellow-dark:  #d79921;
    yellow-light: #fabd2f;
    purple-dark:  #b16286;
    purple-light: #d3869b;
    gray:         #a89984;


    /* Theme colors */
    background:                  @bg0-hard;
    background-color:            @background;
    foreground:                  @fg1;
    border-color:                @gray;
    separatorcolor:              @border-color;
    scrollbar-handle:            @border-color;

    normal-background:           @{{nul.normal.bg}};
    normal-foreground:           @{{nul.normal.fg}};
    alternate-normal-background: @{{alt.normal.bg}};
    alternate-normal-foreground: @{{alt.normal.fg}};
    selected-normal-background:  @{{sel.normal.bg}};
    selected-normal-foreground:  @{{sel.normal.fg}};

    active-background:           @{{nul.active.bg}};
    active-foreground:           @{{nul.active.fg}};
    alternate-active-background: @{{alt.active.bg}};
    alternate-active-foreground: @{{alt.active.fg}};
    selected-active-background:  @{{sel.active.bg}};
    selected-active-foreground:  @{{sel.active.fg}};

    urgent-background:           @{{nul.urgent.bg}};
    urgent-foreground:           @{{nul.urgent.fg}};
    alternate-urgent-background: @{{alt.urgent.bg}};
    alternate-urgent-foreground: @{{alt.urgent.fg}};
    selected-urgent-background:  @{{sel.urgent.bg}};
    selected-urgent-foreground:  @{{sel.urgent.fg}};
}

@import "layout.rasi"

